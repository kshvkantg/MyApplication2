<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/content_meeting_deadline_recycler_view_meeting"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/content_meeting_deadline_rv_meetingAgenda"
        android:layout_width="104dp"
        android:layout_height="85dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="TextView"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/content_meeting_deadline_rv_meetingDate"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="@+id/content_meeting_deadline_rv_meetingAgenda"
        app:layout_constraintTop_toBottomOf="@+id/content_meeting_deadline_rv_meetingAgenda" />

    <TextView
        android:id="@+id/content_meeting_deadline_meetingTime"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="end"
        android:text="Time"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@+id/content_meeting_deadline_rv_meetingAgenda"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/content_meeting_deadline_rv_meetingDate"
        app:layout_constraintTop_toBottomOf="@+id/content_meeting_deadline_rv_meetingAgenda" />

    <TextView
        android:id="@+id/content_meeting_deadline_meetingIntrest"
        android:layout_width="103dp"
        android:layout_height="21dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/content_meeting_deadline_rv_meetingAgenda"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/content_meeting_deadline_rv_meetingAgenda"
        app:layout_constraintTop_toBottomOf="@+id/content_meeting_deadline_meetingTime" />

</androidx.constraintlayout.widget.ConstraintLayout>