<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/content_project_rv_layout"
    >


    <TextView
        android:id="@+id/content_project_rv_ProjectHeading"
        android:layout_width="409dp"
        android:layout_height="31dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="Project Heading"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/content_project_rv_ProjectIntro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background"/>

    <TextView
        android:id="@+id/content_project_rv_ProjectIntro"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="@string/project_intro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_project_rv_ProjectHeading" />
</androidx.constraintlayout.widget.ConstraintLayout>